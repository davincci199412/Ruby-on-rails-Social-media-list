<p id="notice"><%= notice %></p>

<h1>Legislators</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Other</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @legislators.each do |legislator| %>
      <tr>
        <td><%= legislator.first_name %></td>
        <td><%= legislator.last_name %></td>
        <td><%= legislator.facebook_id %></td>
        <td><%= legislator.twitter_id %></td>
        <td><%= legislator.other_id %></td>
        <td><%= legislator.detail %></td>
        <td><%= link_to 'Show', legislator %></td>
        <td><%= link_to 'Edit', edit_legislator_path(legislator) %></td>
        <td><%= link_to 'Destroy', legislator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

